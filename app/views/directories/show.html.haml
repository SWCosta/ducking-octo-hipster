%ul.breadcrumb
  %li
  - directory_menu_items(@dir.fullname)[0..-2].each do |item|
    %li
      = link_to item[:name], directory_path(item[:path])
      %span.divider= "/"
  - last = directory_menu_items(@dir.fullname).last
  %li
    %strong= last[:name]

%table
  %tr
    %th Name
  - @subdirs.each do |dir|
    %tr
      %td
        %i.icon-folder-close
        = link_to dir.name, directory_path(dir.fullname.slice(1..-1))
        = link_to icon("edit"), edit_dir_path(dir)
        -#= link_to_folder(dir)

%table
  %tr
    %th Name
  - @nodes.each do |node|
    %tr
      %td
        %i.icon-folder-close
        = link_to node.name, directory_path(node.fullname.slice(1..-1))
        = link_to icon("edit"), edit_dir_path(node)
        -#= link_to_folder(dir)
