%h1 Dateien

= link_button "Neue Datei", new_file_path

%table.table.table-condensed
  %tr
    %th Name
    %th Dateityp
    %th Größe
  - @files.each do |file|
    %tr
      %td= file.name
      %td= file.ext
      %td= file.size

= will_paginate @files, :previous_label => h("<"), :next_label => h(">"), :renderer => BootstrapLinkRenderer
